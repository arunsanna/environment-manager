{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Environment Manager Resources",
    "Parameters": {
        "pLambdaFunctionBucket": {
            "Type": "String",
            "Description": "S3 Bucket containing code for Lambda functions",
            "Default": "lambda.trainline.com",
            "MinLength": "0"
        },
        "pRedisAddress": {
            "Type": "String",
            "Description": "Redis Address",
            "MinLength": 1
        },
        "pRedisPort": {
            "Type": "String",
            "Description": "Redis Port",
            "Default": "6379",
            "MinLength": 1
        },
        "pRedisAccessSecurityGroups": {
            "Type": "List<AWS::EC2::SecurityGroup::Id>",
            "Description": "Redis Access Security Group"
        },
        "pRedisSubnets": {
            "Type": "List<AWS::EC2::Subnet::Id>",
            "Description": "Redis Access Subnets"
        },
        "pLambdaFunctionExecutionRoleArn": {
            "Type": "String",
            "Description": "ARN of IAM role as which the Lambda functions will execute"
        }
    },
    "Resources": {
        "lambdaDynamoDbTableBumpItemVersion": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "pLambdaFunctionBucket"
                    },
                    "S3Key": "EnvironmentManager/DynamoDbTableBumpItemVersion.zip"
                },
                "Description": "This function increments the version of each item in a DynamoDB table.",
                "Environment": {
                    "Variables": {
                        "REDIS_ADDRESS": {
                            "Ref": "pRedisAddress"
                        },
                        "REDIS_PORT": {
                            "Ref": "pRedisPort"
                        }
                    }
                },
                "Handler": "index.handler",
                "MemorySize": 128,
                "Role": {
                    "Ref": "pLambdaFunctionExecutionRoleArn"
                },
                "Runtime": "nodejs4.3",
                "Timeout": 30
            }
        },
        "lambdaReplicateDynamoDbStreamRedis": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Ref": "pLambdaFunctionBucket"
                    },
                    "S3Key": "EnvironmentManager/ReplicateDynamoDbStreamRedis.zip"
                },
                "Description": "This function responds to a DynamoDB stream event by writing the value new value to a Redis hash.",
                "Environment": {
                    "Variables": {
                        "REDIS_ADDRESS": {
                            "Ref": "pRedisAddress"
                        },
                        "REDIS_PORT": {
                            "Ref": "pRedisPort"
                        }
                    }
                },
                "Handler": "index.handler",
                "MemorySize": 128,
                "Role": {
                    "Ref": "pLambdaFunctionExecutionRoleArn"
                },
                "Runtime": "nodejs4.3",
                "Timeout": 10,
                "VpcConfig": {
                    "SecurityGroupIds": {
                        "Ref": "pRedisAccessSecurityGroups"
                    },
                    "SubnetIds": {
                        "Ref": "pRedisSubnets"
                    }
                }
            }
        }
    },
    "Outputs": {
        "BumpItemVersionFunctionArn": {
            "Description": "Bump Item Version Function ARN",
            "Value": {
                "Fn::GetAtt": [
                    "DynamoDbTableBumpItemVersion",
                    "Arn"
                ]
            }
        },
        "ReplicateFunctionArn": {
            "Description": "Replicate Function ARN",
            "Value": {
                "Fn::GetAtt": [
                    "lambdaReplicateDynamoDbStreamRedis",
                    "Arn"
                ]
            }
        }
    }
}